{
    "runway": {
        "prefix": "r4y",
        "description": "Starter Runway file",
        "scope": "yaml",
        "body": [
            "# See full syntax at https://docs.onica.com/projects/runway/en/release/runway_config.html",
            "variables:",
            "  file_path: runway.variables.yml  # default filename (yaml or yml are both checked)",
            "",
            "tests:",
            "  - name: example-test",
            "    type: script",
            "    args:",
            "      commands:",
            "        - echo \"Hello World!\"",
            "",
            "deployments:",
            "  - modules:  # minimum requirements for a deployment",
            "      # \"./\" can alternatively be used for the module name to indicate",
            "      # the current directory",
            "      - my-module.cfn",
            "    regions:",
            "      - us-east-1",
            "  - name: detailed-deployment  # optional",
            "    modules:",
            "      - path: my-other-modules.cfn",
            "    regions:",
            "      - us-east-1",
            "    environments:",
            "      prod: 111111111111/us-east-1",
            "      dev:",
            "        - 222222222222/us-east-1",
            "        - 333333333333/us-east-1",
            "      lab: true",
            "    account_id: ${var:account_ids}  # optional",
            "    assume_role: ${var:assume_role}  # optional",
            "    parameters:  # optional",
            "      region: ${env:AWS_REGION}",
            "      image_id: ${var:image_id.${env:DEPLOY_ENVIRONMENT}}",
            "    env_vars:  # optional environment variable overrides",
            "      AWS_PROFILE: ${var:aws_profile.${env:DEPLOY_ENVIRONMENT}::default=default}",
            "      APP_PATH: ${var:app_path.${env:DEPLOY_ENVIRONMENT}}",
            "  - modules:",
            "      - path: path/to/module.cfn",
            "        parameters:",
            "          region: ${env AWS_REGION}",
            "          instance_count: ${var instance_count.${env DEPLOY_ENVIRONMENT}}",
            "        environments:",
            "          dev: true",
            "          prod:",
            "            - 0123456789012/us-east-1",
            "            - 0123456789012/us-west-2",
            "        tags:",
            "          - app:example",
            ""
        ]
    },
    "runway.module": {
        "prefix": "- path",
        "description": "Common Runway Module definition",
        "scope": "yaml",
        "body": [
            "      - path: ${1:path/to/module.cfn}",
            "        parameters:",
            "          key: value",
            "        environments:",
            "          dev: true"
        ]
    }
}
